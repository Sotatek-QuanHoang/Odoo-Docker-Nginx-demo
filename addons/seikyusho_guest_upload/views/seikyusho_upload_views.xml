<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_seikyusho_upload_tree" model="ir.ui.view">
        <field name="name">seikyusho.upload.tree</field>
        <field name="model">seikyusho.upload</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="upload_date"/>
                <field name="amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_seikyusho_upload_form" model="ir.ui.view">
        <field name="name">seikyusho.upload.form</field>
        <field name="model">seikyusho.upload</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="upload_date"/>
                        <field name="amount"/>
                        <field name="currency_id"/>
                        <field name="attachment_id"/>
                    </group>
                    <group string="Uploader" colspan="2">
                        <field name="uploader_ip" readonly="1"/>
                        <field name="uploader_user_agent" readonly="1"/>
                        <field name="create_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_seikyusho_upload" model="ir.actions.act_window">
        <field name="name">Seikyusho Uploads</field>
        <field name="res_model">seikyusho.upload</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_seikyusho_root" name="Seikyusho" sequence="60"/>
    <menuitem id="menu_seikyusho_upload" name="Uploads" parent="menu_seikyusho_root" action="action_seikyusho_upload" sequence="10"/>
</odoo>
